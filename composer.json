{
    "name": "piotrpolak/pepiscms",
    "description": "Content management system",
    "license": "MIT",
    "authors": [
        {
            "name": "Piotr Polak",
            "email": "piotr@polak.ro"
        }
    ],
    "minimum-stability": "stable",
    "version": "1.0.0-dev",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/piotrpolak/pepiscms-3rdparty.git"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "piotrpolak/pepiscms-3rdparty": "1.0.0",
        "codeigniter/framework": "3.1.8",
        "phpoffice/phpexcel": "1.8.1",
        "jasig/phpcas": "1.3.5",
        "ckeditor/ckeditor": "4.4.8"
    },
    "require-dev": {
        "mikey179/vfsStream": "1.1.*",
        "behat/mink-goutte-driver": "1.2.*",
        "behat/mink-extension": "2.1.*",
        "behat/behat": "3.2.*",
        "behat/mink": "1.7.*",
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "classmap": [
            "pepiscms/application/classes/",
            "pepiscms/application/models/",
            "pepiscms/application/libraries/",
            "pepiscms/application/drivers/",
            "pepiscms/modules/symfony2_bridge/libraries/",
            "pepiscms/modules/crud/libraries/",
            "pepiscms/modules/translator/libraries/",
            "pepiscms/modules/symfony2_bridge/models/",
            "pepiscms/modules/sqlconsole/models/",
            "pepiscms/modules/html_customization/models/",
            "pepiscms/modules/backup/models/"
        ]
    }
}
